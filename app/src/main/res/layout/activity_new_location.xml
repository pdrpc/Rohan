<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintNewLoc"
    android:background="?attr/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NewLocationActivity">

    <ImageView
        android:id="@+id/erebor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/_a4834a987"
        app:tint="?attr/colorText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textViewLocationLat"/>

    <TextView
        android:id="@+id/textViewLocationLat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/rounded_fields"
        android:padding="2sp"
        android:paddingStart="8sp"
        android:textColor="@color/darkPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/textViewLocationLon"/>

    <TextView
        android:id="@+id/textViewLocationLon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/rounded_fields"
        android:padding="2sp"
        android:paddingStart="8sp"
        android:textColor="@color/darkPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/editTextLocationName"/>

    <EditText
        android:id="@+id/editTextLocationName"
        android:hint="@string/locationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:padding="2sp"
        android:paddingStart="8sp"
        android:background="@drawable/rounded_fields"
        app:layout_constraintBottom_toTopOf="@+id/editTextLocationDesc"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/editTextLocationDesc"
        android:hint="@string/locationDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:padding="2sp"
        android:paddingStart="8sp"
        android:background="@drawable/rounded_fields"
        app:layout_constraintBottom_toTopOf="@+id/saveLocation"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/saveLocation"
        android:text="@string/saveLocation"
        android:background="@drawable/rounded_corner_accent"
        android:onClick="saveLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>